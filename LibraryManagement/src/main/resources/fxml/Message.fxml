<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.ScrollPane?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.ChatController" spacing="10" style="-fx-background-color: #f0f0f0;" >
    <!-- Scrollable chat box -->
    <ScrollPane VBox.vgrow="ALWAYS" prefHeight="500" maxHeight="Infinity" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <VBox fx:id="chatBox" spacing="5" style="-fx-background-color: transparent;"/>
    </ScrollPane>

    <!-- Message input field and send button -->
    <HBox spacing="10">
        <TextField fx:id="messageInput" promptText="Type your message..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Send" />
    </HBox>
</VBox>
